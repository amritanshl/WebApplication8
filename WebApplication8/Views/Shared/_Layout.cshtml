<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeePortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <style>
        /* 1. DEFINE THEMES USING VARIABLES */
        :root {
            /* LinkedIn Dark (Default) */
            --bg-body: #000000;
            --bg-card: #1D2226;
            --bg-nav: #1B1F23;
            --text-main: #E1E9EE;
            --text-muted: #9199A1;
            --border-color: #38434F;
            --accent-primary: #70B5F9;
            --accent-button: #0A66C2;
            --accent-text: #ffffff;
            --input-bg: #12171B;
            --logo-bg: #0A66C2;
            --logo-text: #ffffff;
            --shadow: none;
            /* Ambient & Edge Lighting Variables (Dark Mode) */
            --ambient-bg-gradient: linear-gradient(-45deg, #000000, #1a1a1a, #0d1b2a, #000000);
            --edge-light-color: rgba(112, 181, 249, 0.6); /* Blueish glow */
            --edge-spread: 150px; /* How far the light reaches in */
        }

        [data-theme="snapchat"] {
            /* Snapchat Light */
            --bg-body: #FAFAFA;
            --bg-card: #FFFFFF;
            --bg-nav: #FFFFFF;
            --text-main: #000000;
            --text-muted: #65676B;
            --border-color: #E5E5E5;
            --accent-primary: #FFFC00;
            --accent-button: #FFFC00;
            --accent-text: #000000;
            --input-bg: #F0F2F5;
            --logo-bg: #FFFC00;
            --logo-text: #000000;
            --shadow: 0 4px 12px rgba(0,0,0,0.05);
            /* Ambient & Edge Lighting Variables (Light Mode) */
            --ambient-bg-gradient: linear-gradient(-45deg, #fdfbf7, #fffde7, #ffffff, #f0f2f5);
            --edge-light-color: rgba(0, 0, 0, 0.8); /* Dark/Black glow */
            --edge-spread: 100px;
        }

        /* 2. BACKGROUND AMBIENT ANIMATION */
        body {
            background-color: var(--bg-body); /* Fallback */
            background: var(--ambient-bg-gradient);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite; /* The ambient animation */

            color: var(--text-main);
            font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            transition: color 0.3s ease;
            position: relative;
            min-height: 100vh;
        }

        @@keyframes gradientBG {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* 3. EDGE LIGHTING OVERLAYS */
        /* These are invisible by default, opacity is controlled by JS */
        .edge-glow {
            position: fixed;
            pointer-events: none; /* Let clicks pass through */
            z-index: 9999;
            transition: opacity 0.1s ease-out; /* Smooth fading */
            opacity: 0;
        }

        .edge-top {
            top: 0;
            left: 0;
            width: 100%;
            height: var(--edge-spread);
            background: linear-gradient(to bottom, var(--edge-light-color), transparent);
        }

        .edge-bottom {
            bottom: 0;
            left: 0;
            width: 100%;
            height: var(--edge-spread);
            background: linear-gradient(to top, var(--edge-light-color), transparent);
        }

        .edge-left {
            top: 0;
            left: 0;
            height: 100%;
            width: var(--edge-spread);
            background: linear-gradient(to right, var(--edge-light-color), transparent);
        }

        .edge-right {
            top: 0;
            right: 0;
            height: 100%;
            width: var(--edge-spread);
            background: linear-gradient(to left, var(--edge-light-color), transparent);
        }

        /* Existing Styles Below */
        .navbar {
            background-color: var(--bg-nav) !important;
            border-bottom: 1px solid var(--border-color) !important;
            transition: background-color 0.3s ease;
            position: relative;
            z-index: 1000; /* Ensure nav stays above glow */
        }

        .navbar-brand, .nav-link {
            color: var(--text-main) !important;
            font-weight: 600;
        }

            .nav-link:hover {
                opacity: 0.8;
            }

        .brand-badge {
            background-color: var(--logo-bg);
            color: var(--logo-text);
            padding: 0 6px;
            border-radius: 4px;
            font-weight: bold;
            margin-right: 4px;
        }

        .container-main {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 25px;
            margin-top: 25px;
            box-shadow: var(--shadow);
            transition: background-color 0.3s ease, border-color 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .btn-primary {
            background-color: var(--accent-button);
            border: none;
            color: var(--accent-text);
            font-weight: 700;
            border-radius: 20px;
            padding: 8px 20px;
        }

            .btn-primary:hover {
                background-color: var(--accent-button);
                filter: brightness(0.95);
                color: var(--accent-text);
            }

        .btn-outline-primary {
            color: var(--accent-primary);
            border-color: var(--accent-primary);
            border-radius: 20px;
        }

        [data-theme="snapchat"] .btn-outline-primary {
            color: #000;
            border-color: #000;
        }

        .form-control {
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            color: var(--text-main);
            border-radius: 8px;
        }

            .form-control:focus {
                background-color: var(--input-bg);
                color: var(--text-main);
                border-color: var(--accent-primary);
                box-shadow: 0 0 0 2px rgba(112, 181, 249, 0.2);
            }

        [data-theme="snapchat"] .form-control:focus {
            box-shadow: 0 0 0 2px rgba(255, 252, 0, 0.5);
        }

        footer {
            background-color: var(--bg-nav);
            border-top: 1px solid var(--border-color) !important;
            color: var(--text-muted) !important;
            margin-top: 40px;
            padding: 20px 0;
            position: relative;
            z-index: 1000;
        }

        .table {
            color: var(--text-main);
        }

            .table thead th {
                border-bottom: 2px solid var(--border-color);
                color: var(--text-muted);
            }

            .table td {
                border-bottom: 1px solid var(--border-color);
            }

        .theme-btn {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-main);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.2s;
        }

            .theme-btn:hover {
                background-color: var(--input-bg);
            }
    </style>
</head>
<body data-theme="linkedin">

    <div id="glow-top" class="edge-glow edge-top"></div>
    <div id="glow-bottom" class="edge-glow edge-bottom"></div>
    <div id="glow-left" class="edge-glow edge-left"></div>
    <div id="glow-right" class="edge-glow edge-right"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-badge">in</span>
                    <span class="d-none d-md-inline">Corp Directory</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon" style="filter: invert(1) grayscale(100%) brightness(200%);"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employees" asp-action="Index">
                                    <i class="bi bi-house-door-fill me-1"></i> Home
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <button class="theme-btn" onclick="toggleTheme()">
                            <i class="bi bi-palette-fill"></i> Switch Theme
                        </button>
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                        <div style="width: 30px; height: 30px; background-color: var(--accent-primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 8px; color: #000; font-weight: bold; font-size: 0.7rem;">AD</div>
                                        <span class="d-none d-lg-inline">Me</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow" style="background-color: var(--bg-nav); border: 1px solid var(--border-color);">
                                        <li><h6 class="dropdown-header" style="color: var(--text-main)">@Context.Session.GetString("UserEmail")</h6></li>
                                        <li><hr class="dropdown-divider" style="background-color: var(--border-color);"></li>
                                        <li><a class="dropdown-item text-danger fw-bold" asp-controller="Account" asp-action="Logout">Sign Out</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-primary" asp-controller="Account" asp-action="Login">Sign In</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 container-main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2026 - EmployeePortal - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: var(--accent-primary);">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // --- 1. Theme Logic ---
        function toggleTheme() {
            const body = document.body;
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'linkedin' ? 'snapchat' : 'linkedin';
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcon(newTheme);
        }

        function updateIcon(theme) {
            const badge = document.querySelector('.brand-badge');
            if (badge) {
                badge.innerText = theme === 'linkedin' ? 'in' : '👻';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme') || 'linkedin';
            document.body.setAttribute('data-theme', savedTheme);
            updateIcon(savedTheme);
        });

        // --- 2. Ambient Edge Lighting Logic ---
        document.addEventListener('mousemove', (e) => {
            const width = window.innerWidth;
            const height = window.innerHeight;
            const x = e.clientX;
            const y = e.clientY;

            // Threshold: How close (in pixels) the mouse needs to be to start glowing
            const threshold = 250;

            // Calculate opacity for each side (0.0 to 1.0) based on proximity
            // Math.max ensures we don't get negative numbers
            // 1 - (distance / threshold) makes opacity higher as distance gets smaller

            // TOP
            const distTop = y;
            const opTop = distTop < threshold ? 1 - (distTop / threshold) : 0;

            // BOTTOM
            const distBottom = height - y;
            const opBottom = distBottom < threshold ? 1 - (distBottom / threshold) : 0;

            // LEFT
            const distLeft = x;
            const opLeft = distLeft < threshold ? 1 - (distLeft / threshold) : 0;

            // RIGHT
            const distRight = width - x;
            const opRight = distRight < threshold ? 1 - (distRight / threshold) : 0;

            // Apply opacity to the edge elements
            document.getElementById('glow-top').style.opacity = opTop;
            document.getElementById('glow-bottom').style.opacity = opBottom;
            document.getElementById('glow-left').style.opacity = opLeft;
            document.getElementById('glow-right').style.opacity = opRight;
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            // Check if TempData has the error message
            var message = '@TempData["AuthErrorMessage"]';
            if (message) {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "5000"
                };
                toastr.error(message);
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>