@model WebApplication8.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<style>
    /* Main Card Container */
    .create-card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 40px;
        margin-top: 30px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    [data-theme="instagram"] .create-card {
        border-radius: 8px;
        box-shadow: none;
    }

    h1 {
        color: var(--text-main);
        font-weight: 800;
        text-align: center;
        margin-bottom: 5px;
    }

    .subtitle {
        color: var(--text-muted);
        text-align: center;
        font-size: 14px;
        margin-bottom: 30px;
    }

    /* Labels & Inputs */
    .form-label {
        color: var(--text-muted);
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        background-color: var(--input-bg) !important;
        border: 1px solid var(--border-color) !important;
        color: var(--text-main) !important;
        border-radius: 12px !important;
        padding: 12px 15px !important;
        font-size: 15px;
    }

        .form-control:focus {
            border-color: var(--primary-accent) !important;
            box-shadow: 0 0 0 2px rgba(255, 252, 0, 0.2) !important;
        }

    [data-theme="instagram"] .form-control:focus {
        box-shadow: 0 0 0 2px rgba(0, 149, 246, 0.2) !important;
    }

    /* Primary Submit Button */
    .btn-submit-student {
        background-color: var(--primary-accent);
        color: #000 !important;
        border: none;
        font-weight: 800;
        width: 100%;
        padding: 14px;
        border-radius: 50px;
        margin-top: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: transform 0.2s, opacity 0.2s;
    }

    [data-theme="instagram"] .btn-submit-student {
        color: #fff !important;
        border-radius: 8px;
        text-transform: none;
    }

    .btn-submit-student:hover {
        transform: scale(1.02);
        opacity: 0.9;
    }

    /* Secondary Link */
    .back-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 13px;
        display: block;
        text-align: center;
        margin-top: 20px;
        font-weight: 600;
    }

        .back-link:hover {
            color: var(--text-main);
        }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="create-card">
            <h1>Create</h1>
            <p class="subtitle">Add a new student to the directory</p>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="form-group">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="e.g. John Doe" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SubjectId" class="form-label">Subject</label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId">
                        <option value="">Select a Subject</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="EnrollmentDate" class="form-label">Enrollment Date</label>
                    <input asp-for="EnrollmentDate" class="form-control" type="date" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Marks" class="form-label">Marks</label>
                    <input asp-for="Marks" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Marks" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-submit-student">Create Student</button>
                </div>
            </form>

            <a asp-action="Index" class="back-link">Back to Students</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}